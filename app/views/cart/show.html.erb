<p id="notice"><%= notice %></p>
<h1>Cart Details</h1>

<table class = "table table-striped">
  <thead>
  <tr>
    <th>Course Name</th>
    <th>Teacher Name</th>
    <th>Course Price</th>
  </thead>

  <tbody>
  <tr>
    <% @student_cart.each do |scart|
    %>
      <td><%= Course.find_by(id: scart.courseid).name %></td>
      <td><%= Teacher.find_by(id: scart.teacherid).name %></td>
      <td><%= Course.find_by(id: scart.courseid).price %></td>
  </tr>
<% end %>
  </tbody>
</table>
<%= link_to 'Back', student_course_path %>
<% if !@student_cart.empty? %>
<%= button_to 'Checkout', {:controller => "course_registration", :action => "create", :studentid => @student_id_for_reg} , :method=>:post  %>
<% end %>
