    <%= form.label :address %>
    <%= form.text_field :address %><br />

    <%= form.label :major %>
    <%= form.text_field :major %><br />

    <%= form.label :phone_field %>
    <%= form.phone_field :phone %><br />
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
